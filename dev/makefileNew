
#set flags and compiler

SRC = ../src

CXX=g++-4.8
CXXFLAGS = -std=c++0x -g -O2 -Wall -larmadillo -framework Accelerate -restrict
DEPS= $(SRC)/Pauli.hpp $(SRC)/amoeba.hpp $(SRC)/SU2amoeba.cpp
SOURCES= ./segSolver.cpp
OBJECTS=$(SOURCES:.cpp=.o) $(DEPS:.hpp=.o) $(DEPS:.cpp=.o)
EXECUTABLE = segSolver

all: $(SOURCES) $(EXECUTABLE)

$(EXECUTABLE): $(OBJECTS)
	$(CXX) $(OBJECTS) -o $@

.cpp.o:
	$(CXX) $(CXXFLAGS) $< -o $@

